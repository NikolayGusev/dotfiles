# Use the `dim` attribute instead of underline for the cursor in the preview pane
set cursorpreviewfmt "\033[7;2m"
#set cursorpreviewfmt "\033[7;90m"

set scrolloff 5

map a push :touch<space>
map A push :mkdir<space>
map x :cut
map d :delete
map i :invert
map v $less $f
map gp cd ~/Projects
map f #unmap
map ff :fzf_select
map fg :rg_search_files_or_content

map <c-c> :copy_to_clipboard

map gyy :yank-path
map gyd :yank-dirname

# move to sibling dir
map J :updir; set dironly true; down; set dironly false; open
map K :updir; set dironly true; up; set dironly false; open


# Commands
cmd mkdir %{{
    IFS=" "
    mkdir -p -- "$*"
    lf -remote "send $id select \"$*\""
}}

cmd touch %{{
    IFS=" "
    touch -- "$*"
    lf -remote "send $id select \"$*\""
}}

cmd yank-path %{{
    if type pbcopy > /dev/null 2>&1; then
	    printf '%s' "$f" | pbcopy
    elif type xsel > /dev/null 2>&1; then
	    printf '%s' "$f" | xsel -ib
    fi
}}

cmd yank-dirname %{{
    if type pbcopy > /dev/null 2>&1; then
	    printf '%s' "$(dirname $f)" | pbcopy
    elif type xsel > /dev/null 2>&1; then
	    printf '%s' "$(dirname $f)" | xsel -ib
    fi
}}

cmd fzf_select ${{
    local selection
    selection=$(fzf)
    lf -remote "send $id select \"$selection\""
}}

cmd rg_search_files_or_content ${{
    local selection
    # see https://github.com/junegunn/fzf/issues/2789#issuecomment-1097770616
    selection=$(rg --line-number --with-filename . --color=always --field-match-separator ' '\
	   | fzf --ansi --preview "bat --color=always {1} --highlight-line {2}" \
	       --preview-window ~8,+{2}-5 | cut -d " " -f 1)
    lf -remote "send $id select \"$selection\""
}}
