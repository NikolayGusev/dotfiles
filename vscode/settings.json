    "resizeWindow": {
      "title": "Resize window transient",
      "bindings": [
        {
          "key": "j",
          "name": "Grow height",
          "command": "workbench.action.increaseViewHeight"
        },
        {
          "key": "k",
          "name": "Shrink height",
          "command": "workbench.action.decreaseViewHeight"
